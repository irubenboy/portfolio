---
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const locale = getI18N({ currentLocale });
---
<article class=`
    flex flex-col items-center justify-center gap-8 md:flex-row
    text-gray-700 dark:text-gray-300 
`>
        <div class=`
            [&>p]:mb-4 
            [&>p>strong]:text-purple-500 dark:[&>p>strong]:text-purple-100 
            [&>p>strong]:font-normal [&>p>strong]:font-mono
            text-pretty 
            order-2 md:order-1
        `>
        <p set:html={locale.ABOUT_ME_PARAGRAPH_1}></p>

        <p set:html={locale.ABOUT_ME_PARAGRAPH_2}></p>

        <p set:html={locale.ABOUT_ME_PARAGRAPH_3}></p>

        <p set:html={locale.ABOUT_ME_PARAGRAPH_4}></p>

        <a href="https://drive.google.com/file/d/1TCwG4TNJUV4CSmNMAyOox2AX4Ik0a0Jk/view?usp=drive_link" class=`
            block 
            border border-purple-500 rounded-lg
            hover:bg-purple-500
            text-purple-500 hover:text-white
            transition transition-all duration-500
            text-center
            py-2
            w-full
            text-2xl
        `>{locale.DOWNLOAD_CV}</a>
    </div>

    <img width="200" height="200" src="/portfolio/images/profile/me.jpg" alt="irudev image" 
    class=`
        w-64 h-full lg:w-64
        bg-black/20 dark:bg-purple-500/5 
        rounded-2xl 
        ring-1 ring-black/70 dark:ring-white/70
        order-1 md:order-2
        object-cover 
        rotate-3 
        p-1 lg:p-2 
        aspect-square 
    ` style="object-position: 50% 50%">
</article>